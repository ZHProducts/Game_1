<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_test2"
    tools:context=".Playergphome">


    <ImageButton
        android:id="@+id/btnBerufe"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/berufe_button" />

    <ImageButton
        android:id="@+id/btnNextDay"
        android:layout_width="121dp"
        android:layout_height="51dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/next_day_button" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Pop_Icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_population_test_transparent_colored"
            android:contentDescription="@string/pop_icon" />

        <TextView
            android:id="@+id/idPopcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_max_gain"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/Food_Icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_food_test_transparent_colored"
            android:contentDescription="@string/food_icon" />

        <TextView
            android:id="@+id/idFoodcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_max_gain"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/Gold_Icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_gold_test_transparent_colored"
            android:contentDescription="@string/gold_icon" />

        <TextView
            android:id="@+id/idGoldcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_max_gain"
            android:textSize="23sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>